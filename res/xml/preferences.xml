<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
            android:title="Experiment settings">
            <CheckBoxPreference
       			android:key="experimentIsReady"
                android:title="Check if Experiment is ready"
                android:summaryOn="Check if Experiment is ready"
                android:summaryOff="Check if Experiment is ready"
                android:defaultValue="false"
                android:persistent="true"
                />
      
    		<EditTextPreference 
    			android:title="Experiments directory"
				android:key="experimentsDir" 
				android:summary="Enter the experiments directory on your Android, it might be /sdcard/OPrime or /sdcard/dropbox" android:dialogTitle="Enter the experiments directory"
				android:defaultValue="/sdcard/OPrime"
				android:persistent="true"/>
			
			<EditTextPreference 
				android:title="Default stimuli file"
				android:key="defaultStimuli" 
				android:summary="Enter the default stimuli file (it usually ends in .csv)" android:dialogTitle="Enter the default stimuli file"
				android:defaultValue=""
				android:persistent="true"/>
			
            <EditTextPreference 
				android:title="Default experimenter code"
				android:key="defaultExperimenterCode"  
				android:summary="You can put a default experimenter code if you want" android:dialogTitle="Enter Your experimenter code"
				android:defaultValue="AA"
				android:persistent="true"/>
        
    </PreferenceCategory>
    
    
    <PreferenceCategory
            android:title="About">

        <PreferenceScreen
                android:title="Visit Website">

            <intent android:action="android.intent.action.VIEW"
                    android:data="https://github.com/iLanguage/AndroidOPrime/wiki" />

                
	        <Preference
	                android:title="@string/preference_about_title"
	                android:summary="@string/preference_about_summary"
	                android:enabled="false"
	                android:selectable="false" />
	                
	        <Preference
	                android:title="@string/preference_thanks_title"
	                android:summary="@string/preference_thanks_summary"
	                android:enabled="false"
	                android:selectable="false" />
	                
	        <Preference
	                android:title="@string/preference_licence_title"
	                android:summary="@string/preference_licence_summary"
	                android:enabled="false"
	                android:selectable="false" />
		</PreferenceScreen>

    </PreferenceCategory>

</PreferenceScreen>
