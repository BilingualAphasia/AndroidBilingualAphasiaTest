<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   >
       <LinearLayout
	   xmlns:android="http://schemas.android.com/apk/res/android"
	   android:orientation="horizontal"
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	    >
    	
        <Button 
    		android:text="Chercher/Réactualiser"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:drawableLeft="@drawable/ic_settings"
        	android:onClick="onFindExperimentsClick"
        	/>
        <Button 
    		android:text="Morphological Awareness"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:drawableLeft="@drawable/ic_play"
        	android:onClick="onRunMorphoClick"
        	/>
        <Button 
    		android:text="BAT English Syntax Sample"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:drawableLeft="@drawable/ic_play"
        	android:onClick="onRunBATClick"
        	/>
        <Button 
    		android:text="Exemplaire de BAT - Français"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:drawableLeft="@drawable/ic_play"
        	android:onClick="onRunFrenchBATClick"
        	/>
    </LinearLayout>
<ListView
    android:id="@+id/android:list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    />
<TextView
    android:id="@+id/android:empty"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:text="No experiments, use The File Browser to look in your dropbox (probably /sdcard/dropbox)"/>



</LinearLayout>